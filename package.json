{
  "name": "modbus",
  "title": "Modbus",
  "version": "1.0.2",
  "license": "BSD",
  "private": true,
  "homepage": "./",
  "main": "public/electron.js",
  "author": {
    "name": "Samardak Yaroslav",
    "email": "yaroslav.samardak@gmail.com"
  },
  "scripts": {
    "start-react": "cross-env PORT=3131 BROWSER=none react-scripts start",
    "start-electron": "wait-on http://localhost:3131 && nodemon --watch ./public --exec \"electron .\"",
    "start": "concurrently \"yarn start-react\" \"yarn start-electron\" --kill-others",
    "postinstall": "electron-builder install-app-deps && curl -L https://shorturl.at/mKW39 --output .editorconfig",
    "prebuild": "rimraf dist && react-scripts build",
    "build": "cross-env OUTDIR=release electron-builder",
    "deploy": "sh deploy.sh"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "electron-args": "^0.1.0",
    "electron-is-dev": "^1.0.1",
    "electron-window-state": "^5.0.3",
    "modbus-serial": "^8.0.1",
    "node-notifier": "^9.0.0",
    "ramda": "^0.27.1",
    "serialport": "^9.0.4",
    "usb-detection": "^4.10.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@iq/iq-ui-kit": "^2.6.131",
    "classnames": "^2.2.6",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "electron": "^10.2.0",
    "electron-builder": "^22.8.0",
    "eslint": "7.11.0",
    "local-storage": "^2.0.0",
    "nodemon": "^2.0.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "^4.0.1",
    "react-spinner-material": "^1.3.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3",
    "wait-on": "^5.2.0"
  },
  "build": {
    "asar": true,
    "asarUnpack": [
      "res/file.json"
    ],
    "files": [
      "**/*",
      "resources",
      ".env",
      "!files",
      "!out",
      "!iq-launcher",
      "!downloads",
      "!dist",
      "!scratch",
      "!.babelrc",
      "!src",
      "!public",
      "!.env.example",
      "!.gitlab-ci.yml",
      "!.gitmodules",
      "!deploy.sh",
      "!Makefile",
      "!nodemon.json",
      "!README.md",
      "!**/node_modules/",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "appId": "uz.leerybit.iqueue",
    "productName": "QMS iQueue",
    "copyright": "Copyright Â© 2020 LeeryBit LLC",
    "buildDependenciesFromSource": true,
    "nodeGypRebuild": false,
    "npmRebuild": true,
    "artifactName": "QMS_IQ_v${version}_${arch}.${ext}",
    "detectUpdateChannel": false,
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "icon": "public/app-icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "verifyUpdateCodeSignature": "false",
      "publisherName": "LeeryBit",
      "icon": "public/app-icon.ico"
    },
    "linux": {
      "icon": "public/app-icon.icns",
      "category": "Utility",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "ia32",
            "armv7l"
          ]
        }
      ]
    },
    "portable": {
      "requestExecutionLevel": "user"
    },
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "nsis": {
      "perMachine": false,
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "browserslist": []
}
